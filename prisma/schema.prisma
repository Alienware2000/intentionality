generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Quest {
  id        String   @id @default(cuid())
  title     String
  userId    String
  createdAt DateTime @default(now())
  tasks     Task[]

  @@index([userId])
}

model Task {
  id        String   @id @default(cuid())
  title     String
  dueDate   String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())

  questId   String
  quest     Quest    @relation(fields: [questId], references: [id])

  @@index([questId])
  @@index([dueDate])
}

